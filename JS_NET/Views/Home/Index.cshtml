@{
    ViewData["Title"] = "Home Page";
}

<form action="/" method="post">
    <div class="row">
        <div class="col-md-6">
            <h2>Dados do usuário</h2>
        </div>
    </div>
    <div class="row formPrinc">
        <div class="col-md-4">
            <input type="email" id="emailInput" name="Email" class="form-control" required />
        </div>
        <div class="col-md-3">
            <input type="button" id="Pesquisar" name="Pesquisar" value="Pesquisar" class="btnCustomR" />
            <input type="button" id="Resumo" name="Resumo" value="Resumo" class="btnCustomY" />

        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div id="loading"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div id="tel"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div id="dataNascim"></div>
        </div>
    </div>

    <div class="modalCustom" id="resumoCustom" tabindex="-1" role="dialog">
        <div class="modaldialog" role="document">
            <div class="modalcontent">
                <div class="modalheader">
                    <span class="close">&times;</span>
                    <h4 class="modaltitle">O utilizador com o email <span id="emailSpan"></span> têm os seguintes dados:</h4>
                </div>
                <div class="modalbody">
                    <p id="resumo"></p>
                </div>
                @*<div class="modalfooter">
            <button type="button" class="closemodal" data-dismiss="modal">Fechar</button>
        </div>*@
            </div>
        </div>
    </div>
</form>

